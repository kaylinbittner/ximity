<div class="row">
  <div class="card p-4">
    <h2 class="text-center">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'simple-form'}) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", style: 'margin-left: 15px' } %>
      <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", maxlength: 30, style: 'margin-left: 15px'  }
                    %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions my-4 text-center">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
    </div>

    <% end %>

    <div class="row">
      <div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>