<div class="row"> 
  <div class="card">
    <h2 class="my-3">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'simple-form'}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", maxlength: 30 }
                    %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
  

<% end %>

<div class="row">
  <div>
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
</div>